@model Radus_ConSec.Models.Admin

@{
    ViewBag.Title = "ConSec® - Yönetici Giriş";
}

@{
    Layout = null;
}

@using (Html.BeginForm("Giris", "Giris", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <html lang="tr">
    <head>
        <meta charset="UTF-8">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
        <title>ConSec® - Yönetici Giriş</title>
        <link rel="stylesheet" href="~/assets/css/app.min.css">
        <link rel="stylesheet" href="~/assets/bundles/bootstrap-social/bootstrap-social.css">
        <link rel="stylesheet" href="~/assets/css/style.css">
        <link rel="stylesheet" href="~/assets/css/components.css">
        <link rel="stylesheet" href="~/assets/css/custom.css">
        <link rel='shortcut icon' type='image/x-icon' href='~/assets/img/favicon.ico' />
    </head>

    <body>
        <div class="loader"></div>
        <div id="app">
            <section class="section">
                <div class="container mt-5">
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        <div class="row">
                            <div class="card card-primary">
                                <div class="card-header">
                                    <h4>ConSec® - Yönetici Giriş Sayfası</h4>
                                </div>
                                <div class="card-body">
                                    <form method="POST" action="#" class="needs-validation" novalidate="">
                                        <div class="form-group">
                                            <div class="d-block">
                                                @Html.LabelFor(a => a.AdminEmail)
                                            </div>
                                            @Html.TextBoxFor(a => a.AdminEmail, new { style = "width: 300px;", @class = "form-control" })
                                            @Html.ValidationMessageFor(a => a.AdminEmail)
                                        </div>

                                        <div class="form-group">
                                            <div class="d-block">
                                                @Html.LabelFor(a => a.AdminPassword)
                                            </div>
                                            @Html.PasswordFor(a => a.AdminPassword, new { style = "width: 300px;", @class = "form-control" })
                                            @Html.ValidationMessageFor(a => a.AdminPassword)
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                                Giriş Yap
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </body>
</html>
}

<script src="~/assets/js/app.min.js"></script>
<script src="~/assets/js/scripts.js"></script>
<script src="~/assets/js/custom.js"></script>